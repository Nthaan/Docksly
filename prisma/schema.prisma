generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  emailVerified DateTime?
  image         String?
  role          String    @default("user")
  departemen    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  username      String    @unique
  accounts      Account[]
  sessions      Session[]
  surat         Surat[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Surat {
  id         String     @id @default(cuid())
  judul      String
  departemen String
  tujuan     String
  isi        String
  tanggal    DateTime   @default(now())
  createdBy  String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  lampiran   String?
  pengirim   String
  refNumber  String     @unique
  jenis      JenisSurat
  status     StatusSurat @default(DRAFT)   
  user       User       @relation(fields: [createdBy], references: [id])
  pinned      Boolean  @default(false) 
  fileUrl    String? 
}

enum JenisSurat {
  Formal
  NonFormal
}

enum StatusSurat {
  DRAFT
  FINAL
}